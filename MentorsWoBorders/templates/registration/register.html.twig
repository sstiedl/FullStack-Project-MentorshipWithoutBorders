{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

   <style>
        @import url('https://fonts.googleapis.com/css2?family=Baloo+Bhaijaan+2:wght@400;500;700;800&display=swap');

 
        body {
            background-color: #F3E9D2;
            font-family: 'Baloo Bhaijaan 2', cursive;
        }
        .signup {
            width: 100vw;
            height: 100vh;

        }

        .leftside {
            background-color: #88D498;
            text-align: center;
        }

        .leftside h1 {
            color: white;
            font-size: calc(25px + 2rem);
            font-family: 'Baloo Bhaijaan 2', cursive;
        }
        .global {
            width: 85%;
            margin: auto;
        }
        .person {
            width: 35%;
        }

        .form {
            width: 60%;
            min-width: 280px;
            margin: auto;
            color: #114B5F;
            padding-top:8%;
        }

        .rightside h1 {
            text-align: center;
            font-size: calc(20px + 1rem);
            color: #1A936F;
           font-family: 'Baloo Bhaijaan 2', cursive;

        }

        .signupbtn {
            color: white;
            background-color: #88D498;
            margin: auto;
            width: 100%;
            /* box-shadow:  3px 5px 5px #cfdee4; */
        }
          
        @media screen and (max-width:767px) {
            .signup {
            height: 100%;

        }
        .leftside {
            background-color: #88D498;
            text-align: center;
            height: 75%;
        }

        .leftside h1 {
            color: white;
            font-size: calc(10px + 2rem);
            margin-top: 5%;
        }
        .form {
            padding-top: 5%;
        }
 
    }

     .navbar {
            background-color: #114B5F;
        }
        .right {
            position: absolute;
            right: 0%;
        }

        @media (min-width: 768px) {
            .center {
                position: absolute;
                width: auto;
                left: 50%;
                top: 5px;
                transform: translateX(-45%);
                text-align: center;
            }
        }
        @media (max-width: 991px) {
            .right {
            position:unset;
            padding: 8px 0px 8px 24px;
        }
        } 
        @media (max-width: 767px) {
            .center {
                position: absolute;
                width: auto;
                left: 50%;
                top: 5px;
                transform: translateX(-50%);
                text-align: center;
            }

            .logo-sm {
                width:40px;
                  height:43px;
            }
3          @media (max-width: 425px){
              .logo-sm {
                  width:35px;
                  height:35px;
              }
            
            }
            @media (max-width: 374px){
                .center {
                position: absolute;
                width: auto;
                left: 65%;
                top: 8px;
                transform: translateX(-60%);
                text-align: center;
                font-size: 1.1rem;
            }
            }
          
        }
        /* navbar logo  */
        .logo-sm {
            width:43px;
            height:40px;
        }@media (max-width: 374px){
            .logo-sm {
            width:38px;
            height:35px;
            }
            .navbar-brand {
                font-size:1.2rem!important;
            }
        }
        
    </style>

      <nav class="navbar navbar-expand-lg navbar-light">

        <a class="navbar-brand center text-white" href="#" style="font-size:1.5rem;">Mentorship <img src="../../assets/images/logo5.jpg" class="logo-sm" > Without Borders</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link ps-4 text-white" aria-current="page" href="/" style="font-size:1.2rem;">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link ps-4 text-white" href="/partners" style="font-size:1.2rem;">Partners</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link ps-4 text-white" href="/blog" style="font-size:1.2rem;">Blog</a>
                </li>
            
            <div class="navbar-nav right">
                <li class="nav-item">
                    
                </li>
                <li class="nav-item">
                    <a class="nav-link pe-4 text-white" href="/login" style="font-size:1.2rem;">Login</a>
                </li>
            </div>
            </ul>
        </div>

    </nav>

    <div class="row signup">

        <!-- leftside -->
        <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12 leftside">
            <h1 class="fw-bold animate__animated animate__fadeInLeft">Join Our Community!</h1>
            <img src="../../assets/images/global.png" alt="" class="global animate__animated animate__zoomIn">
            <img src="../../assets/images/registar.png" alt="" class="person animate__animated animate__zoomIn">

        </div>

        <!-- rightside -->
        <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12 rightside">

            <div class="form">
                  <h1 class="text-center mb-5 mt-0">Create Account</h1>
                  {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.first_name) }}
                    {{ form_row(registrationForm.last_name) }}
                    {{ form_row(registrationForm.birthday) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.password, {
              label: 'Password'   
             }) }}
                    {{ form_row(registrationForm.mentor_mantee) }}

                    <button type="submit" class="btn signupbtn mt-4 mb-4">Sign UP!</button>
                  {{ form_end(registrationForm) }} 
            </div>
        </div>
    </div>







