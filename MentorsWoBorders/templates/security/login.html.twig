{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
<style>
         @import url('https://fonts.googleapis.com/css2?family=Baloo+Bhaijaan+2:wght@400;500;700;800&display=swap');

        body {
            color: #114B5F;
            background-color: #F3E9D2;
            font-family: 'Baloo Bhaijaan 2', cursive;

        }

        .login {
            width: 100vw;
            height: 100vh;

        }

        .leftside {
            background-color: #88D498;
            text-align: center;
        }

        .leftside h1 {
            color: white;
            font-size: calc(25px + 3rem);
            margin-top: 10%;
            margin-bottom: 5%;
            font-family: 'Baloo Bhaijaan 2', cursive;
        }
        .leftside img {
            width: 60%;
        }

        .rightside form {
            width: 60%;
            min-width: 280px;
            margin: auto;
            padding-top: 25%;
        }

        .rightside h1 {
            text-align: center;
            font-size: calc(20px + 2rem);
            color: #1A936F;
            font-family: 'Baloo Bhaijaan 2', cursive;
        }

        .signinbtn {
            color: white;
            background-color: #88D498;
            margin: auto;
            width: 100%;
            /* box-shadow:  3px 5px 5px #cfdee4; */
        }
        @media screen and (max-width:767px) {
            .login {
            height: 100%;

        }
            
            .leftside {
            background-color: #88D498;
            text-align: center;
            height: 70%;
        }

        .leftside h1 {
            color: white;
            font-size: calc(20px + 2rem);
            margin-top: 5%;
        }
        .rightside form {
            padding-top: 5%;
            margin-bottom:100px;
        }
 
    }

     .navbar {
            background-color: #114B5F;
        }
        .right {
            position: absolute;
            right: 0%;
        }

        @media (min-width: 768px) {
            .center {
                position: absolute;
                width: auto;
                left: 50%;
                top: 5px;
                transform: translateX(-45%);
                text-align: center;
            }
        }
        @media (max-width: 991px) {
            .right {
            position:unset;
            padding: 8px 0px 8px 24px;
        }
        } 
        @media (max-width: 767px) {
            .center {
                position: absolute;
                width: auto;
                left: 50%;
                top: 5px;
                transform: translateX(-50%);
                text-align: center;
            }
            @media (max-width: 374px){
                .center {
                position: absolute;
                width: auto;
                left: 65%;
                top: 8px;
                transform: translateX(-60%);
                text-align: center;
                font-size: 1.1rem;
            }
            }
        }
        /* navbar logo  */
        .logo-sm {
            width:43px;
            height:40px;
        }@media (max-width: 374px){
            .logo-sm {
            width:38px;
            height:35px;
            }
            .navbar-brand {
                font-size:1.2rem!important;
            }
        }
    </style>

       <nav class="navbar navbar-expand-lg navbar-light">

        <a class="navbar-brand center text-white" href="#" style="font-size:1.5rem;">Mentorship <img src="../../assets/images/logo5.jpg" class="logo-sm"> Without Borders</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link ps-4 text-white" aria-current="page" href="/" style="font-size:1.2rem;">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link ps-4 text-white" href="/partners" style="font-size:1.2rem;">Partners</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link ps-4 text-white" href="/blog" style="font-size:1.2rem;">Blog</a>
                </li>
            
            <div class="navbar-nav right">
                <li class="nav-item">
                    
                </li>
                <li class="nav-item">
                    <a class="nav-link pe-4 text-white" href="/register" style="font-size:1.2rem;">Sign Up</a>
                </li>
            </div>
            </ul>
        </div>

    </nav>


<div class="row login">

        <!-- leftside -->
        <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12 leftside">
            <h1 class="animate__animated animate__bounceInDown">Welcome Back!</h1>
            <img src="../../assets/images/regi.png" alt="" class="animate__animated animate__zoomIn">
        </div>

        <!-- rightside -->
        <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12 rightside">
            <form method="post">
                <!-- {% if error %} -->
                <!-- <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> -->
                <!-- {% endif %}

        {% if app.user %} -->
                <!-- <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div> -->
                <!-- {% endif %} -->

                <h1 class="h3 mb-3 font-weight-normal mb-5">Sign in</h1>
                
                <i class="bi bi-envelope"></i> <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control logininput mt-2 mb-4 border-0" autocomplete="email" placeholder="example@mail.com" required autofocus>
                <i class="bi bi-lock"></i><label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control logininput mt-2 mb-5 border-0" autocomplete="current-password" placeholder="Enter your password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <!-- {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html -->

                <div class="checkbox mb-4">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                <!-- #} -->
        
                <button class="btn signinbtn" type="submit">
                    Sign in
                </button>

            </form>

        </div>

    </div>
{% endblock %}
